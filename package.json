{
  "name": "ctxport",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "packageManager": "pnpm@10.28.1",
  "description": "CtxPort - AI Context Bundle for seamless context migration between AI tools",
  "repository": {
    "type": "git",
    "url": "https://github.com/nicepkg/ctxport.git"
  },
  "license": "MIT",
  "scripts": {
    "dev": "turbo run dev",
    "dev:ext": "turbo run dev --filter=@ctxport/extension",
    "dev:packages": "turbo run dev --filter='./packages/*'",
    "build": "turbo run build",
    "build:ext": "turbo run build --filter=@ctxport/extension",
    "build:packages": "turbo run build --filter='./packages/*'",
    "test": "turbo run test",
    "test:watch": "turbo run test:watch",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "typecheck": "turbo run typecheck",
    "clean": "rm -rf node_modules packages/*/node_modules packages/*/dist apps/*/node_modules apps/*/.output .turbo **/.turbo"
  },
  "engines": {
    "node": ">=22.0.0",
    "pnpm": ">=10.0.0"
  },
  "devDependencies": {
    "eslint": "catalog:tooling",
    "prettier": "catalog:tooling",
    "turbo": "^2.8.3",
    "typescript": "catalog:tooling"
  }
}
